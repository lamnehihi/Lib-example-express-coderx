extends ../layouts/common
block content
  h1.text-center Cart
  h2.text-center #{total} item in cart

  if errors
     each error in errors
       .alert.alert-danger(role='alert')=error

  .container
    .row
      table.table
        thead
          tr
            th(scope='col') PRODUCT
            th(scope='col')
            th(scope='col') QUANTITY
            th(scope='col') TOTAL
            th(scope='col')
        tbody
          each book in books
              tr
                td=book.title
                td 
                  img.img-thumbnail(src=book.image, alt='Card image cap', height='200px', width='150px')
                td=book.quantity
                td=book.price
                td
                  .d-flex.flex-column  
                    a.btn.btn-outline-danger(href='/cart/delete/' + book.id, role='button') Delete
                  p.d-none=++x
                
                
              

