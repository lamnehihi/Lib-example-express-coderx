extends ../layouts/common
block content 
  h1 Sign up
  if errors
    each error in errors
      .alert.alert-danger(role='alert')=error
  form(action='/auth/signup', method="post", enctype='multipart/form-data')
    .form-group
      label(for='title') Name:
      input#title.form-control(type="text", name="name")
      label(for='Email') Email:
      input#Email.form-control(type="text", name="email")
      label(for='Password') Password:
      input#Password.form-control(type="text", name="password")
      label(for='Avatar') Avatar:
      input#Avatar.form-control(type="file", name="avatar")
      button.btn.btn-primary Sign up