extends ../layouts/common
block content
  h1 User
  h5= "Hello " + user.name
  if errors
    each error in errors
      .alert.alert-danger(role='alert')=error
  a.m-2.badge.badge-primary(href="users/create") Add new User
  a.badge.badge-primary(href="users/profile") Profile
  
  table.table
    tr
      th Name
      th Cart
      th 
    tr
      td= user.name
      td= user.cart
  if users
    table.table
      tr
        th Name
        th Cart
        th 
      if users
        each user in users
          tr
            td= user.name
            td= user.cart
            td
              a.btn.btn-primary.btn-sm(href="users/update/" + user.id) Update
              a.btn.btn-danger.btn-sm(href="users/delete/" + user.id) Delete